<h1 style="text-align: center; font-family: Arial, sans-serif; color: #333;">
    Calendar for Month {{ month }} of Year {{ year }}
</h1>
<table style="width: 80%; margin: auto; border-collapse: collapse; text-align: center; font-family: Arial, sans-serif; font-size: 14px;">
    <thead>
    <tr style="background-color: #f2f2f2;">
        <th style="border: 1px solid #ccc; padding: 8px;">Day</th>
        <th style="border: 1px solid #ccc; padding: 8px;">Day Name</th>
    </tr>
    </thead>
    <tbody>
    {% for week in calendar %}
        {% for day in week %}
            {% if day is not null %}
                <tr>
                    <td style="border: 1px solid #ccc; padding: 8px;">{{ day.day }}</td>
                    <td style="border: 1px solid #ccc; padding: 8px;">{{ day.weekday }}</td>
                </tr>
            {% endif %}
        {% endfor %}
    {% endfor %}
    </tbody>
</table>
