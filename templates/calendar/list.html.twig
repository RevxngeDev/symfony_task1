<h1 style="text-align: center; font-family: Arial, sans-serif; color: #333;">
    Calendar for Month {{ month }} of Year {{ year }}
</h1>
<ul style="list-style-type: none; padding: 0; font-family: Arial, sans-serif; font-size: 14px; width: 50%; margin: auto; color: #333;">
    {% for week in calendar %}
        {% for day in week %}
            {% if day is not null %}
                <li style="
                    padding: 8px;
                    margin: 4px 0;
                    border-bottom: 1px solid #ccc;
                    {{ day.isPast ? 'text-decoration: line-through; color: #999;' : '' }}">
                    {{ day.day }} - {{ day.weekday }}
                </li>
            {% endif %}
        {% endfor %}
    {% endfor %}
</ul>
